{
  "compilerOptions": {
    "outDir": "./transpiled",
    "rootDir": "./source",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "source/**/*"
  ]
}
